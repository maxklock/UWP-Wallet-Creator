<Page
    x:Class="WalletCreator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WalletCreator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:WalletCreator="using:WalletCreator"
    mc:Ignorable="d">

    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="20">
            <Image Source="Assets/Square150x150Logo.scale-200.png" />
            <Button x:Name="btnPhoto"
                    Margin="0,20,0,0"
                    Content="Take Photo"
                    HorizontalAlignment="Stretch" Click="BtnPhotoClick" />
            <Button x:Name="btnContact"
                    Margin="0,20,0,0"
                    Content="vCard"
                    HorizontalAlignment="Stretch" Click="BtnContactClick" />
            <Button x:Name="btnBarcode"
                    Margin="0,20,0,0"
                    Content="Barcode"
                    HorizontalAlignment="Stretch" Click="BtnBarcodeClick" />
        </StackPanel>
    </ScrollViewer>
</Page>
