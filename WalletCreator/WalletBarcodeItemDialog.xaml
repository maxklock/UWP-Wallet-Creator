<ContentDialog
    x:Class="WalletCreator.WalletBarcodeItemDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WalletCreator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="New Barcode"
    PrimaryButtonText="Save"
    SecondaryButtonText="Abort"
    PrimaryButtonClick="ContentDialogPrimaryButtonClick"
    SecondaryButtonClick="ContentDialogSecondaryButtonClick"
    FullSizeDesired="True">

    <StackPanel>
        <ComboBox x:Name="boxType"
                  HorizontalAlignment="Stretch"
                  Header="Type" />
        <TextBox x:Name="tbxName"
                 Margin="0,20,0,0"
                 PlaceholderText="My Image Card"
                 Header="Name" />
        <TextBox x:Name="tbxId"
                 Margin="0,20,0,0"
                 PlaceholderText="1234567890"
                 Header="Id" />
    </StackPanel>
</ContentDialog>
